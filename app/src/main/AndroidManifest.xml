<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nano.karen.SpotifyStreamer" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TrackListActivity"
            android:label="@string/title_activity_track_list"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nano.karen.SpotifyStreamer.MainActivity" />
        </activity>
        <activity
            android:name=".PlaybackActivity"
            android:label="@string/title_activity_playback"
            android:parentActivityName=".TrackListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TrackListActivity" />
        </activity>

        <service
            android:name="com.nano.karen.spotifystreamer.StreamerService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
