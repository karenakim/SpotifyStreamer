<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.nano.karen.spotifystreamer.PlaybackActivity">



    <TextView
        android:text="artist name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playback_artist_name" />

    <TextView
        android:text="album name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playback_album_name"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/playback_album_image"/>

    <TextView
        android:text="track name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playback_track_name"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_text_size_medium_material"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/playback_seekbar"/>

    <LinearLayout
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:id="@+id/playback_prev_button"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:id="@+id/playback_play_pause_button"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:id="@+id/playback_next_button"/>


    </LinearLayout>

</LinearLayout>
